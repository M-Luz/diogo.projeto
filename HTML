    <roteiro>
        inserir função (num)
        {
            var numero = documento. getElementById('resultado'). interiorHTML;
            documento. getElementById('resultado'). innerHTML = numero + num;
        }
        função limpa()
        {
            documento. getElementById('resultado'). interiorHTML = "";
        }
        função de volta()
        {
            documento. getElementById('resultado'). interiorHTML = "";
